{
    "compilerOptions": {
        "outDir": "../dist",
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "types": ["node"],
        "paths": {
            "@/*": ["./*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "rootDir": "./"
    },
    "include": ["**/*.ts"]
}
